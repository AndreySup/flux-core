./cmbd \
  --dn-event-in-uri='tcp://*:5558' \
  --dn-event-out-uri='tcp://*:5559' \
  --up-req-in-uri='tcp://*:5556' \
  --dn-req-out-uri='tcp://*:5557' \
  --rank=0 --size=3 --children=1  \
  --plugins=api,barrier,live,log,kvs,conf,sync \
  --set-conf sync.period.sec=1.5 \
  --set-conf kvs.redis.hostname=127.0.0.1 \
  --set-conf kvs.redis.port=6379 \
  --set-conf-hostlist=localhost,localhost,localhost
  --verbose
